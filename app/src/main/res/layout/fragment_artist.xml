<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="iam.thevoid.epic.myapplication.presentation.ui.artist.ArtistViewModel" />
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".presentation.ui.iam.thevoid.epic.sanbox.MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:background="@drawable/bckg_gray_corners_8dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="Artist">

                        <EditText
                            android:id="@+id/et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/spinner_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/bckg_gray_corners_8dp"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="invisible"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Page:" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="108dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        tools:listitem="@layout/support_simple_spinner_dropdown_item" />
                </LinearLayout>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/loading"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/bckg_gray_corners_8dp"
            android:padding="8dp"
            app:visibleUnless="@{vm.loading}">

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="true" />
        </FrameLayout>

    </FrameLayout>
</layout>